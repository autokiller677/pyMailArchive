########## Example Account configuration file ##########
########## SAVE AS .account FILE! ##########

[server]
name=mailserver.provider.com
port=993
[credentials] 
########## If you don't want to save your username / password, just enter "input". ##########
########## You will be prompted to enter the information every time the programm runs ##########
name=username@provider.com
pass=password

[settings]
excludedFolders = [".*FolderA",".*Junk Mail",".*Deleted Items"]